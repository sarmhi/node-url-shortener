<%- include('../includes/head.ejs') %>


  <%- include('../includes/nav.ejs') %>
    <div class="container">
      <% if (urls.length > 0){ %>
        <div>
          <h3>This a list of all Urls: </h3>
        </div>
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>Old Url</th>
              <th>Shortened Url</th>
            </tr>
          </thead>
          <tbody>
            <% for (i = 0; i < urls.length; i++) { %>
              <tr>
                <th scope=row><%= i+1 %></th>
                <td><%= urls[i].long_url %></td>
                <td><%= domain %>/url/<%= urls[i].short_url %></td>
              </tr>
            <% } %>
            
          </tbody>
        </table>
      <% }else { %>
        <div class="jumbotron">
          <p>There are currently no Urls.</p>
          <p>Kindly help us change that by shortening a Url <a href="/url">here</a>.</p>
        </div>
      <% } %>
    </div>

    <%- include('../includes/footer.ejs') %>